# =============================================================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO PARA ITICO
# =============================================================================
# Copia este archivo como .env y configura las variables según tu entorno

# Django Configuration
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Para desarrollo local (SQLite):
DATABASE_URL=sqlite:///db.sqlite3

# Para producción (PostgreSQL en Render):
# DATABASE_URL=postgresql://user:password@host:port/database

# Time Zone
TIME_ZONE=America/Bogota

# Redis Configuration (para Celery)
# Para desarrollo local:
REDIS_URL=redis://localhost:6379/0

# Para producción (Redis en Render):
# REDIS_URL=redis://user:password@host:port

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# External Services
MAKITO_API_URL=http://localhost:8080/api
MAKITO_API_KEY=your-makito-api-key

AI_SERVICE_URL=http://localhost:8081/api
AI_SERVICE_KEY=your-ai-service-key

# Production Settings (solo para producción)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
